<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification_nav"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.bshapp.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" >
        <action
            android:id="@+id/action_mainActivity_to_notificationActivity"
            app:destination="@id/notificationActivity" />
    </activity>
    <activity
        android:id="@+id/notificationActivity"
        android:name="com.bshapp.activities.NotificationActivity"
        android:label="activity_notification"
        tools:layout="@layout/activity_notification" />
</navigation>